@model StockDTO
@{
    Layout = "_AdminLayout";
}

<h2>ManageStock</h2>
<form asp-action="ManageStock">
    <input type="hidden" asp-for="BookId" />

    <div class="my-2">
        <label>Quantity</label>
        <input type="number" class="form-control" asp-for="Quantity" />
        <span class="text-danger" asp-validation-for="Quantity"></span>
    </div>

    <div class="my-2">
        <button class="btn btn-info" type="submit">Update</button>
        <a class="btn btn-primary" asp-action="Index" asp-controller="Stock">Back</a>
    </div>
</form>