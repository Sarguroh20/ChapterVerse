@model IEnumerable<StockDisplayModel>
@{
    Layout = "_AdminLayout";
}

<h2 class="text-primary-emphasis">Stocks</h2>
<form asp-action="Index" method="get" class="my-2 d-flex gap-2">
    <input type="text" name="sTerm" class="form-control w-25" placeholder="Search by book"/>
    <button type="submit" class="btn btn-primary">Find</button>
    <a asp-action="Index" asp-asp-controller="Stock" class="btn btn-primary">Clear</a>
</form>

<table class="table table-striped table-hover">
    <tr>
        <th>Book</th>
        <th>Stock</th>
        <th>Actions</th>
    </tr>
    @foreach(var items in Model)
    {
        <tr>
            <td>@items.BookName</td>
            <td>@items.Quantity</td>
            <td>
                <a asp-action="ManageStock" asp-asp-controller="Stock" asp-route-bookId="@items.BookId" class="btn btn-outline-info">Update Stock</a>
            </td>
        </tr>
    }
</table>

