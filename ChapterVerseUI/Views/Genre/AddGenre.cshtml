@model GenreDTO
@{
    Layout = "_AdminLayout";
}

<div style="width:50%">
    <h2>Add Genre</h2>
    <form asp-action="AddGenre">
        <div class="my-2">
            <label>Genre</label>
            <input type="text" class="form-control" asp-for="GenreName" />
            <span asp-asp-validation-for="GenreName" class="text-danger"></span>
        </div>    

        <div class="my-2">
            <button type="submit" class="btn btn-info">Add</button>
            <a asp-action="Index" asp-asp-controller="Genre" class="btn btn-primary">Back</a>
        </div>
    </form>
</div>
